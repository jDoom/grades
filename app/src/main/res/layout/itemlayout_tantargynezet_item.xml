<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="5dp">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:src="@android:drawable/divider_horizontal_bright"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:scaleType="fitXY"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:background="#6d6d6d"
        android:id="@+id/jegySeparator"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tNevTextView"
        android:textColor="#ffffffff"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/jegyImage"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/jegyImage" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/jegyImage"
        android:src="@drawable/f1"
        android:padding="0dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/jegySeparator"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/kommentTextView"
        android:paddingLeft="10dp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/jegyImage"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/jegyImage" />

</RelativeLayout>